@model SportSystem.Web.InputModels.TeamInputModel
@{
    ViewBag.Title = "Create Team";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Teams", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Name, string.Empty, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Nickname, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(x => x.Nickname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Nickname, string.Empty, new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Website, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(x => x.Website, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Website, string.Empty, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Founded, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(x => x.Founded, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Founded, string.Empty, new { @class = "text-danger" })
        </div>
    </div>

    <div id="players">
        <h3>Players: </h3>
        <div class="form-group player-group">
            <label class="control-label col-md-2">Player: </label>
            <div class="col-md-8">
                @Html.DropDownList("PlayerIds", @ViewBag.Players as IEnumerable<SelectListItem>, "Select Player", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PlayerIds, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
            <a href="#" onclick="$('.player-group').first().clone().appendTo($('#players'));">Add more players</a>
        </div>
    </div>
    

    <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
            <button type="submit" class="btn btn-primary">Add Team</button>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
