<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peek</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
</head>
<body>
    <section class="navbar navbar-inverse navbar-fixed-top">
        <article class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Peek", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                    @if (User.IsLoggedIn())
                    {
                        <li>@Html.ActionLink("My cart", "Index", "Cart", new { area = string.Empty }, null)</li>
                    }
                </ul>
                @Html.Partial("_RightNav")
            </div>
        </article>
    </section>
    <section class="container body-content">
        <h1></h1>
        <article class="col-md-3">
            @Html.Action("Index", "LeftSidebar", new { area = string.Empty })
        </article>
        <article class="col-md-9" id="main-content">
            @RenderBody()
        </article>
        <hr />
        <footer>
            <p class="text-center">Peek&trade; 2015 - ASP.NET MVC Online Shop Application</p>
        </footer>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
